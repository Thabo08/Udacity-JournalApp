<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thabo.android.journalapp">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.thabo.android.journalapp.activities.DiaryActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.thabo.android.journalapp.activities.DiaryEntryActivity"
            android:label="@string/add_diary_entry_label" />

        <activity
            android:name="com.thabo.android.journalapp.activities.DiaryEntryDetailsEntry"
            android:label="@string/diary_details_entry_label" />


    </application>

</manifest>